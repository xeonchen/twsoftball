{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@twsoftball/domain": ["../domain/src/index"],
      "@twsoftball/application": ["../application/src/index"],
      "@twsoftball/shared": ["../shared/src/index"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [],
  "references": [
    {
      "path": "../application"
    },
    {
      "path": "../shared"
    }
  ]
}
