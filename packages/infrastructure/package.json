{
  "name": "@twsoftball/infrastructure",
  "version": "0.1.0",
  "description": "Infrastructure layer - Adapters and implementations",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./web": {
      "types": "./dist/web/index.d.ts",
      "import": "./dist/web/index.js"
    },
    "./memory": {
      "types": "./dist/memory.d.ts",
      "import": "./dist/memory.js"
    },
    "./persistence/*": {
      "types": "./dist/persistence/*.d.ts",
      "import": "./dist/persistence/*.js"
    },
    "./config/*": {
      "types": "./dist/config/*.d.ts",
      "import": "./dist/config/*.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "test": "vitest run --exclude '**/*.perf.test.ts'",
    "test:watch": "vitest",
    "test:perf": "vitest run --testNamePattern 'Infrastructure Performance Testing'",
    "test:coverage": "vitest run --coverage --exclude '**/*.perf.test.ts'",
    "test:all": "vitest run",
    "typecheck": "tsc --noEmit",
    "lint": "tsc --noEmit && eslint 'src/**/*.{ts,tsx}' --max-warnings 0",
    "lint:eslint": "eslint 'src/**/*.{ts,tsx}' --max-warnings 0",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix --max-warnings 0",
    "format": "prettier --write 'src/**/*.{ts,tsx,json}'",
    "format:check": "prettier --check 'src/**/*.{ts,tsx,json}'"
  },
  "dependencies": {
    "@twsoftball/application": "workspace:*",
    "@twsoftball/domain": "workspace:*",
    "@twsoftball/shared": "workspace:*",
    "@types/uuid": "^10.0.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.2.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "typescript": "^5.5.4",
    "vitest": "^3.2.4"
  }
}
