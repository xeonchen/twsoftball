{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@twsoftball/domain": ["../domain/src/index"],
      "@twsoftball/shared": ["../shared/src/index"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/test-factories/**/*",
    "src/test-utils/**/*",
    "node_modules",
    "dist"
  ],
  "references": [
    {
      "path": "../domain"
    },
    {
      "path": "../shared"
    }
  ]
}
