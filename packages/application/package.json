{
  "name": "@twsoftball/application",
  "version": "0.1.0",
  "description": "Application layer - Use cases and ports",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./web": {
      "types": "./dist/adapters/web/index.d.ts",
      "import": "./dist/adapters/web/index.js"
    },
    "./use-cases/*": {
      "types": "./dist/use-cases/*.d.ts",
      "import": "./dist/use-cases/*.js"
    },
    "./ports/*": {
      "types": "./dist/ports/*.d.ts",
      "import": "./dist/ports/*.js"
    },
    "./services/*": {
      "types": "./dist/services/*.d.ts",
      "import": "./dist/services/*.js"
    },
    "./test-utils/*": {
      "types": "./dist/test-utils/*.d.ts",
      "import": "./dist/test-utils/*.js"
    },
    "./dtos/*": {
      "types": "./dist/dtos/*.d.ts",
      "import": "./dist/dtos/*.js"
    },
    "./adapters/*": {
      "types": "./dist/adapters/*.d.ts",
      "import": "./dist/adapters/*.js"
    },
    "./adapters/web": {
      "types": "./dist/adapters/web/index.d.ts",
      "import": "./dist/adapters/web/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "test": "NODE_OPTIONS='--max-old-space-size=2048' vitest run",
    "test:watch": "NODE_OPTIONS='--max-old-space-size=2048' vitest",
    "test:coverage": "NODE_OPTIONS='--max-old-space-size=2048' vitest run --coverage",
    "test:perf": "echo 'No performance tests in this package'",
    "typecheck": "tsc --noEmit",
    "lint": "tsc --noEmit && eslint 'src/**/*.{ts,tsx}' --max-warnings 0",
    "lint:eslint": "eslint 'src/**/*.{ts,tsx}' --max-warnings 0",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix --max-warnings 0",
    "format": "prettier --write 'src/**/*.{ts,tsx,json}'",
    "format:check": "prettier --check 'src/**/*.{ts,tsx,json}'"
  },
  "dependencies": {
    "@twsoftball/domain": "workspace:*",
    "@twsoftball/shared": "workspace:*",
    "@types/uuid": "^11.0.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.2.4",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
