{
  "name": "@twsoftball/domain",
  "version": "0.1.0",
  "description": "Domain layer - Core business logic",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./entities/*": {
      "types": "./dist/entities/*.d.ts",
      "import": "./dist/entities/*.js"
    },
    "./value-objects/*": {
      "types": "./dist/value-objects/*.d.ts",
      "import": "./dist/value-objects/*.js"
    },
    "./events/*": {
      "types": "./dist/events/*.d.ts",
      "import": "./dist/events/*.js"
    },
    "./rules/*": {
      "types": "./dist/rules/*.d.ts",
      "import": "./dist/rules/*.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "test": "NODE_OPTIONS='--max-old-space-size=2048' vitest run",
    "test:watch": "NODE_OPTIONS='--max-old-space-size=2048' vitest",
    "test:coverage": "NODE_OPTIONS='--max-old-space-size=2048' vitest run --coverage",
    "test:perf": "echo 'No performance tests in this package'",
    "typecheck": "tsc --noEmit",
    "lint": "tsc --noEmit && eslint 'src/**/*.{ts,tsx}' --max-warnings 0",
    "lint:eslint": "eslint 'src/**/*.{ts,tsx}' --max-warnings 0",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix --max-warnings 0",
    "format": "prettier --write 'src/**/*.{ts,tsx,json}'",
    "format:check": "prettier --check 'src/**/*.{ts,tsx,json}'"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.2.4",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
