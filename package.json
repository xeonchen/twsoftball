{
  "name": "twsoftball",
  "version": "0.1.0",
  "description": "Slow-pitch softball game recording PWA",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter @twsoftball/web dev",
    "build": "pnpm --recursive run build",
    "test": "pnpm --recursive run test",
    "test:watch": "pnpm --recursive run test:watch",
    "test:coverage": "pnpm --recursive run test:coverage && node tools/scripts/merge-coverage.js",
    "typecheck": "pnpm --recursive run typecheck",
    "lint": "pnpm --recursive run lint",
    "lint:fix": "pnpm --recursive run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yaml,yml}\"",
    "format:check": "pnpm --recursive run format:check",
    "deps:check": "dependency-cruiser --config .dependency-cruiser.cjs packages",
    "clean": "pnpm --recursive run clean && rm -rf node_modules/.cache"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "dependency-cruiser": "^17.0.1",
    "eslint": "^9.34.0",
    "eslint-config-airbnb-extended": "^2.2.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-boundaries": "^5.0.1",
    "eslint-plugin-import": "^2.32.0",
    "glob": "^11.0.0",
    "husky": "^9.1.4",
    "istanbul-lib-coverage": "^3.2.2",
    "istanbul-lib-report": "^3.0.1",
    "istanbul-reports": "^3.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.5",
    "nyc": "^17.1.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "packageManager": "pnpm@8.15.6",
  "pnpm": {
    "overrides": {
      "micromatch@<4.0.8": ">=4.0.8",
      "esbuild@<=0.24.2": ">=0.25.0"
    }
  }
}
