{
  "name": "twsoftball",
  "version": "0.1.0",
  "description": "Slow-pitch softball game recording PWA",
  "private": true,
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "dev": "pnpm --filter @twsoftball/web dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test:coverage && node tools/scripts/merge-coverage.js",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "lint:eslint": "turbo run lint:eslint",
    "lint:fix": "turbo run lint:fix",
    "format": "turbo run format",
    "format:check": "turbo run format:check",
    "deps:check": "dependency-cruiser --config .dependency-cruiser.cjs packages",
    "clean": "turbo run clean && rm -rf node_modules/.cache"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.34.0",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "dependency-cruiser": "^17.0.1",
    "eslint": "^9.34.0",
    "eslint-config-airbnb-extended": "^2.2.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-boundaries": "^5.0.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-security": "^3.0.1",
    "glob": "^11.0.3",
    "husky": "^9.1.7",
    "istanbul-lib-coverage": "^3.2.2",
    "istanbul-lib-report": "^3.0.1",
    "istanbul-reports": "^3.2.0",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.6",
    "nyc": "^17.1.0",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=10"
  },
  "packageManager": "pnpm@10.15.1",
  "pnpm": {
    "overrides": {
      "micromatch@<4.0.8": ">=4.0.8",
      "esbuild@<=0.24.2": ">=0.25.0"
    },
    "ignoredBuiltDependencies": [
      "esbuild"
    ]
  }
}
