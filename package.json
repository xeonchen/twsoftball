{
  "name": "twsoftball",
  "version": "0.1.0",
  "description": "Slow-pitch softball game recording PWA",
  "private": true,
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "dev": "pnpm --filter @twsoftball/web dev",
    "build": "turbo run build",
    "test": "NODE_OPTIONS='--max-old-space-size=2048' turbo run test --concurrency=1",
    "test:watch": "NODE_OPTIONS='--max-old-space-size=2048' turbo run test:watch --concurrency=1",
    "test:perf": "turbo run test:perf",
    "test:coverage": "NODE_OPTIONS='--max-old-space-size=2048' turbo run test:coverage --concurrency=1 && node tools/scripts/merge-coverage.js",
    "test:memory": "NODE_OPTIONS='--max-old-space-size=1024' turbo run test --concurrency=1 --no-cache",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "lint:eslint": "turbo run lint:eslint",
    "lint:fix": "turbo run lint:fix",
    "lint:strict": "eslint --max-warnings 0 .",
    "format": "turbo run format",
    "format:check": "turbo run format:check",
    "fsd:check": "steiger --config steiger.config.ts ./apps/web/src --reporter=json",
    "fsd:watch": "steiger --config steiger.config.ts ./apps/web/src --watch",
    "fsd:staged": "steiger --config steiger.config.ts ./apps/web/src --staged --reporter=json",
    "deps:check": "dependency-cruiser --config .dependency-cruiser.cjs packages apps",
    "clean": "turbo run clean && rm -rf node_modules/.cache"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.39.1",
    "@feature-sliced/steiger-plugin": "^0.5.7",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "dependency-cruiser": "^17.3.1",
    "eslint": "^9.39.1",
    "eslint-config-airbnb-extended": "^2.3.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-boundaries": "^5.3.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-security": "^3.0.1",
    "glob": "^11.1.0",
    "husky": "^9.1.7",
    "istanbul-lib-coverage": "^3.2.2",
    "istanbul-lib-report": "^3.0.1",
    "istanbul-reports": "^3.2.0",
    "jsdom": "^27.2.0",
    "lint-staged": "^16.2.7",
    "nyc": "^17.1.0",
    "prettier": "^3.6.2",
    "steiger": "^0.5.11",
    "turbo": "^2.6.1",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=10"
  },
  "packageManager": "pnpm@10.19.0",
  "pnpm": {
    "overrides": {
      "micromatch@<4.0.8": ">=4.0.8",
      "esbuild@<=0.24.2": ">=0.25.0",
      "vite@<7.1.5": ">=7.1.5",
      "js-yaml@<4.1.1": ">=4.1.1",
      "glob@>=10.3.7 <=11.0.3": ">=11.1.0"
    },
    "ignoredBuiltDependencies": [
      "esbuild"
    ]
  }
}
