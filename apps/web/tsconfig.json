{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "allowJs": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "../../packages/*/src/**/*.test.ts",
    "../../packages/*/src/**/*.test.tsx"
  ],
  "references": [
    {
      "path": "../../packages/domain"
    },
    {
      "path": "../../packages/application"
    },
    {
      "path": "../../packages/infrastructure"
    },
    {
      "path": "../../packages/shared"
    }
  ]
}
