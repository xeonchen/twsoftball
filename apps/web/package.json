{
  "name": "@twsoftball/web",
  "version": "0.1.0",
  "description": "TW Softball PWA",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "clean": "rm -rf dist",
    "lint": "tsc --noEmit && eslint 'src/**/*.{ts,tsx}' --max-warnings 0",
    "lint:eslint": "eslint 'src/**/*.{ts,tsx}' --max-warnings 0",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix --max-warnings 0",
    "format": "prettier --write 'src/**/*.{ts,tsx,json}'",
    "format:check": "prettier --check 'src/**/*.{ts,tsx,json}'",
    "test": "NODE_OPTIONS='--max-old-space-size=2048' vitest run --config vitest.config.ts --exclude '**/*.perf.test.{ts,tsx}'",
    "test:watch": "NODE_OPTIONS='--max-old-space-size=2048' vitest --config vitest.config.ts --exclude '**/*.perf.test.{ts,tsx}'",
    "test:coverage": "NODE_OPTIONS='--max-old-space-size=2048' vitest run --config vitest.config.ts --coverage --exclude '**/*.perf.test.{ts,tsx}'",
    "test:perf": "NODE_OPTIONS='--max-old-space-size=3072' vitest run --config vitest.config.ts --reporter=verbose src/test/performance/**/*.perf.test.*",
    "test:all": "NODE_OPTIONS='--max-old-space-size=2048' vitest run --config vitest.config.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.9",
    "@hookform/resolvers": "3.10.0",
    "@tanstack/react-query": "^5.90.2",
    "@twsoftball/application": "workspace:*",
    "@twsoftball/infrastructure": "workspace:*",
    "clsx": "^2.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.64.0",
    "react-router-dom": "^7.9.3",
    "tailwind-merge": "^3.3.1",
    "uuid": "^11.0.6",
    "workbox-window": "^7.3.0",
    "zod": "^4.1.11",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/postcss": "^4.1.14",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.37.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.23",
    "globals": "^15.13.0",
    "happy-dom": "^18.0.1",
    "jsdom": "^26.0.0",
    "postcss": "^8.5.1",
    "prettier": "^3.6.2",
    "rollup-plugin-visualizer": "^6.0.4",
    "tailwindcss": "^4.1.14",
    "typescript": "^5.9.3",
    "vite": "^6.0.7",
    "vite-bundle-analyzer": "^1.2.3",
    "vite-plugin-pwa": "1.0.3",
    "vitest": "^3.2.4"
  }
}
