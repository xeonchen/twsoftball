{
  "name": "@twsoftball/web",
  "version": "0.1.0",
  "description": "TW Softball PWA",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "clean": "rm -rf dist",
    "lint": "tsc --noEmit && eslint 'src/**/*.{ts,tsx}' --max-warnings 0",
    "lint:eslint": "eslint 'src/**/*.{ts,tsx}' --max-warnings 0",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix --max-warnings 0",
    "format": "prettier --write 'src/**/*.{ts,tsx,json}'",
    "format:check": "prettier --check 'src/**/*.{ts,tsx,json}'",
    "test": "NODE_OPTIONS='--max-old-space-size=2048' vitest run --config vitest.config.ts --exclude '**/*.perf.test.{ts,tsx}'",
    "test:watch": "NODE_OPTIONS='--max-old-space-size=2048' vitest --config vitest.config.ts --exclude '**/*.perf.test.{ts,tsx}'",
    "test:coverage": "NODE_OPTIONS='--max-old-space-size=2048' vitest run --config vitest.config.ts --coverage --exclude '**/*.perf.test.{ts,tsx}'",
    "test:perf": "NODE_OPTIONS='--max-old-space-size=3072' vitest run --config vitest.config.ts --reporter=verbose src/test/performance/**/*.perf.test.*",
    "test:all": "NODE_OPTIONS='--max-old-space-size=2048' vitest run --config vitest.config.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report e2e/playwright-report",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.9",
    "@hookform/resolvers": "5.2.2",
    "@tanstack/react-query": "^5.90.12",
    "@twsoftball/application": "workspace:*",
    "@twsoftball/infrastructure": "workspace:*",
    "clsx": "^2.1.1",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-hook-form": "^7.68.0",
    "react-router-dom": "^7.10.1",
    "tailwind-merge": "^3.4.0",
    "uuid": "^13.0.0",
    "web-vitals": "^5.1.0",
    "workbox-window": "^7.4.0",
    "zod": "^4.1.13",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.17",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "happy-dom": "^20.0.11",
    "jsdom": "^27.2.0",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "rollup-plugin-visualizer": "^6.0.5",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "vite": "^7.2.7",
    "vite-bundle-analyzer": "^1.3.0",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^3.2.4"
  }
}
