{
  "name": "@twsoftball/web",
  "version": "0.1.0",
  "description": "TW Softball PWA",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "clean": "rm -rf dist",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run --config vitest.config.ts --exclude '**/*.perf.test.{ts,tsx}'",
    "test:watch": "vitest --config vitest.config.ts --exclude '**/*.perf.test.{ts,tsx}'",
    "test:coverage": "vitest --config vitest.config.ts --coverage --exclude '**/*.perf.test.{ts,tsx}'",
    "test:perf": "vitest run --config vitest.config.ts --reporter=verbose src/test/performance/**/*.perf.test.*",
    "test:all": "vitest run --config vitest.config.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.8",
    "@hookform/resolvers": "3.10.0",
    "@tanstack/react-query": "^5.87.4",
    "@twsoftball/application": "workspace:*",
    "@twsoftball/infrastructure": "workspace:*",
    "clsx": "^2.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.62.0",
    "react-router-dom": "^7.9.1",
    "tailwind-merge": "^3.3.1",
    "uuid": "^11.0.6",
    "workbox-window": "^7.3.0",
    "zod": "^4.1.8",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/postcss": "^4.1.13",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.35.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.13.0",
    "happy-dom": "^18.0.1",
    "jsdom": "^26.0.0",
    "postcss": "^8.5.1",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.6.3",
    "vite": "^6.0.7",
    "vite-plugin-pwa": "1.0.3",
    "vitest": "^3.2.4"
  }
}
